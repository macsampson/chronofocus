{
  "manifest_version": 3,
  "name": "FocusForge",
  "version": "0.1.0",
  "description": "Gamify your Pomodoro sessions by battling distraction monsters!",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
